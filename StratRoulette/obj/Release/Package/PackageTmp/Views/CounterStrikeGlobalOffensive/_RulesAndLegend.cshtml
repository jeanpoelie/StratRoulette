@using StratRoulette.Extensions
<div class="box box-default">
	<div class="box-header with-border">
		<h3 class="box-title">Legend</h3>
		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
		</div><!-- /.box-tools -->
	</div><!-- /.box-header -->
	<div class="box-body">
		<p>
			<strong>Punishment (unless specified): </strong><br />
			Your teammates are <i>allowed</i> to kill (and teabag) you, if you do not obey the rules. <br />
			<i>We recommend playing these challenges as a squad of 5.</i><br /><br />
			<strong>Legend: </strong><br />
			<div class="text text-@Functions.GetChallengeColor("Defend")">Defend</div>
			<div class="text text-@Functions.GetChallengeColor("Attack")">Attack</div>
			<div class="text text-@Functions.GetChallengeColor("Both")">Both</div>
		<p><i class="ion ion-mouse"></i> Keyboard & Mouse Preferred</p>
		<p><i class="ion ion-ios-game-controller-b"></i> Controller Preferred</p>
		</p>
	</div>
</div>
