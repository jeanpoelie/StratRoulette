@model StratRoulette.Models.DisqusModel
@if (Model != null && !Model.IsEmpty())
{
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Challenge Discussion</h3>
			<div class="box-tools pull-right">
				<button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
			</div><!-- /.box-tools -->
		</div><!-- /.box-header -->
		<div class="box-body">
			<p>
				<strong>Discuss your thoughts about this challenge here!</strong>
			</p>

			<div id="disqus_thread">
				<a href="http://stratroulette.dakpangames.com/@Model.WebpagePath">Link to Thread</a>
			</div>
			<script>

				/**
			 *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
			 *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables */
				var disqus_config = function () {
					this.page.url = "http://stratroulette.dakpangames.com/@Model.WebpagePath"; // Replace PAGE_URL with your page's canonical URL variable
					this.page.identifier = "@Model.Identifier"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
				};
				(function () { // DON'T EDIT BELOW THIS LINE
					var d = document, s = d.createElement('script');
					s.src = '//stratroulette.disqus.com/embed.js';
					s.setAttribute('data-timestamp', +new Date());
					(d.head || d.body).appendChild(s);
				})();
			</script>
			<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

			<script id="dsq-count-scr" src="//stratroulette.disqus.com/count.js" async></script>

		</div><!-- /.box-body -->
	</div><!-- /.box -->
}
